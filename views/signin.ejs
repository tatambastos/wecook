<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Formulario de inicio de sesión</title>
    <!-- Referencias a los archivos CSS de Bootstrap 5 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/css/bootstrap.min.css">
    <style>
      body{
        background-image: url('https://ambar.com/wp-content/uploads/2019/04/especie-scaled.jpg')
      }
      .signin1{
        border: 2px solid white;
        background-color: white;
        border-radius: 3px;
        color: black;
      }
    </style>
    <!-- Referencias a los archivos JavaScript de Bootstrap 5 -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/js/bootstrap.min.js"></script>
</head>
<body>
  <br>
  <br>
  <br>
  <br>
  <br>  
  <br>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <form action="/login" method="POST" class="signin1">
                    <h2 class="text-center mb-4">Iniciar sesión</h2>
                    <div class="mb-3" style="padding: 12px;">
                        <label for="email" class="form-label">Correo electrónico</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3" style="padding: 12px;">
                        <label for="password" class="form-label">Contraseña</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    <div class="d-grid gap-2" style="padding: 12px;">
                        <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                    </div>
                    
                  </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script>
  function comprobarUser() {
    var email = document.getElementById("email").value
    var password = document.getElementById("password").value
    var user = [email, password]
    axios.post('/check', user)
      .then(response => {
        console.log(response.data)
        document.getElementById("email").value = ""
        document.getElementById("password").value = ""
        $('#registroExitosoModal').modal('show');
        let html = `<button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="passUser(response)" href="/user">Iniciar sesión</button>`
        document.getElementById('modal-footer').innerHTML = html;
      })
      .catch(error => {
        console.error(error);
      });
  }

</script>
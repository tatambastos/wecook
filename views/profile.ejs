        src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
        <script
                        src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/js/bootstrap.bundle.min.js"></script>
    <style>
        section, h1 {
            display: inline-block;
            vertical-align: middle;
        }
        .text_ingredient {
            display: -webkit-box;
            -webkit-line-clamp: 4;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .title_ingredient{
            display: -webkit-box;
            -webkit-line-clamp: 1;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .dates{
            border: 1px solid black; 
            border-radius: 5px;
            background-image: url('https://img.freepik.com/foto-gratis/joven-cocinero-feliz-preparando-bruschetta-salsa-aguacate-tomate-cherry-cocina_637285-3120.jpg');
            height: 350px;
            color: white;
        }
    </style>
    <title>Perfil</title>
</head>

<body>
    <header class="container-fluid text-center" style="display: inline-block; background-image: url('https://ambar.com/wp-content/uploads/2019/04/especie-scaled.jpg'); ">
        <section>
            <img src="https://static.vecteezy.com/system/resources/previews/007/113/275/non_2x/avatar-man-face-silhouette-user-sign-person-profile-picture-male-icon-in-circle-round-black-color-illustration-image-outline-contour-line-thin-style-vector.jpg" width="50px"
                height="50px">
            <h5 id="nickname" style="color: white;"><%- user[0].name %></h5>
        </section>
        <H1 style="color: white;">Perfil del Usuario</H1>
        <section>
            <a href="#" id="logoutLink"><img src="https://www.hsmq.cl/factura_proveedor/img/exit.png" width="50px" height="50px"></a>
        </section>
        <br>
        </header>
        <br>
        <button class="btn btn-secondary" onclick="Recipe()">Ir a buscar recetas</button>
        <div class="container">
            <div class="dates">
                <h1>Datos del usuario</h1>
                <br>
                <p></p>
                <h2><%- user[0].name %> <%- user[0].last_name %></h2>
                
                <p><%- user[0].email %> </p> 
            </div>
            
        </div>
    
    <div class="container my-3" style="background-image: url('https://www.cocinayvino.com/wp-content/uploads/2017/05/65566967_l-696x464.jpg'); border: 1px solid black; border-radius: 5px; text-align: center; ">
        <div>
        <h2 class="text-center mb-4" style="color: white;">Recetas Favoritas</h2>
        <div class="card-group" id="recipes">
            
        </div>
        </div>
    </div>
    <div class="container">
        <div style="border-top: 1px solid black; border-radius: 5px; text-align: center;" >
            <p>Bienvenido a tu perfil, puedes agregar recetas a tu perfil añadiendo en la pestaña de favoritos en la receta</p>
        </div>
        
    </div>
    <%- include('partials/recipeClient'); %>
    <%- include('partials/modal_ingredients'); %>
    <%- include('partials/recipe'); %>
    <script>
        // Agrega un evento de clic al enlace o botón de cerrar sesión
        document.getElementById('logoutLink').addEventListener('click', function(event) {
          event.preventDefault();  // Evita el comportamiento predeterminado del enlace (navegar a una nueva página)
          
          // Realiza una solicitud al servidor para cerrar la sesión
          fetch('/logout', { method: 'GET' })
            .then(response => {
              if (response.redirected) {
                window.location.href = response.url;  // Redirige al usuario a la página especificada después de cerrar sesión
              }
            })
            .catch(error => {
              console.error(error);
            });
        });
        function Recipe(){
            window.location.href = "home";
        }
      </script>
</body>

</html>
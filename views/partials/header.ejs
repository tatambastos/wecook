    <!-- Stylesheet -->
    <style>
        

        input[type="text"],
        input[type="submit"] {
            display: inline-block;
            vertical-align: middle;
            margin: 0;
            padding: 10px;
            font-size: 16px;
        }

        .text_ingredient {
            display: -webkit-box;
            -webkit-line-clamp: 4;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .title_ingredient{
            display: -webkit-box;
            -webkit-line-clamp: 1;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        input[type="text"] {
            width: 75%;
            padding: 15px 10px;
            border: none;
            border-bottom: 1px solid #645979;
            outline: none;
            border-radius: 5px 5px 0 0;
            background-color: #ffffff;
            font-size: 16px;
        }

        ul {
            list-style: none;
        }

        .d-block{
            list-style: circle;
        }

        .list {
            width: 75%;
            background-color: #ffffff;
            border-radius: 0 0 5px 5px;
        }

        .list-items {
            padding: 10px 5px;
        }

        .list-items:hover {
            background-color: #dddddd;
        }

        .tag {
            margin-right: 5px;
            margin-bottom: 5px;
            border-radius: 20px;
            padding: 3px 8px;
        }

        .tag .tag-text {
            display: inline-block;
        }

        .eliminar-tag {
            cursor: pointer;
            margin-left: 5px;
        }


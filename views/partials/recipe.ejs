<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script>
  

  function addRecipe(id) {
    axios.post('/query', {id: id})
      .then(response => {
        console.log(response.data);
        var recipeName = response.data.recipe.name;
        var recipeInstrucions = response.data.recipe.instructions;
        var recipeImage = response.data.recipe.url;
        var ingredientsList = "";
        response.data.ingredients.forEach(ingredient => {
            ingredientsList += "<li>" + ingredient.name + " - " + ingredient.amount + "</li>";
        });
        var recipeHtml = "<h2>" + recipeName + "</h2><p>" + recipeInstrucions + '</p> <img src="'+ recipeImage +'" class="card-img-top" alt="..." ><ul>'+ ingredientsList + "</ul>";
        document.getElementById("recipe-container").innerHTML = recipeHtml;
      })
      .catch(error => {
        console.error(error);
      });
  }
 // Falta cerrar esta llave
</script>
